{
  "compilerOptions": {
    // Target and Module
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Library and Environment
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    // Type Checking
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Output and Emission
    "noEmit": true,
    "declaration": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    // Module and Path Resolution
    "resolveJsonModule": true,
    "paths": {
      "@component-lib/icons": ["../packages/icons/src"]
    },

    // Advanced Options
    "isolatedModules": true
  },
  "include": ["src"]
}
